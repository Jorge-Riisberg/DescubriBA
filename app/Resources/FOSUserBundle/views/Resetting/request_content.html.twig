{% trans_default_domain 'FOSUserBundle' %}

<form class="form-horizontal" action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
  <fieldset>
    <legend>¿Has olvidado tu contraseña?</legend>
    <div class="form-group">
      <label for="inputEmail" class="col-lg-2 control-label">Email</label>
      <div class="col-lg-10">
        <input class="form-control" id="username" name="username" type="text" required placeholder="Nombre de Usuario o Email">
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Restablecer Contraseña</button>
      </div>
    </div>
  </fieldset>
</form>