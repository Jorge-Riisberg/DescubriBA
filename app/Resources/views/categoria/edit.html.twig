{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modificar <strong>Categoría</strong></h1><br>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <br>
        <a href="{{ path('categoria_index') }}" class="btn btn-primary" role="button">Volver</a>
        <input type="submit" value="Modificar" class="btn btn-success" role="button"/>
    {{ form_end(edit_form) }}
    
    <br><input type="submit" value="Eliminar" class="btn btn-danger" role="button" data-toggle="modal" data-target="#confirm-delete">

    <div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
            
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title" id="myModalLabel">Confirmar</h4>
                </div>
            
                <div class="modal-body">
                    <p>Se eliminará la categoria {{categoria.nombre}}, la acción es irreversible.</p>
                    <p>Desea continuar?</p>
                </div>
                
                <div class="modal-footer">
                    {{ form_start(delete_form) }}
	                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
	                    <button class="btn btn-danger btn-ok">Eliminar</button>
    				{{ form_end(delete_form) }}                    
                </div>
            </div>
        </div>
    </div>

    <script> $('#confirm-delete').on('show.bs.modal', function(e) { $(this).find('.btn-ok').attr('href', $(e.relatedTarget).data('href')); }); </script>

{% endblock %}
